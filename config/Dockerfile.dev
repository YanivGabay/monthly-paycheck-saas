# Use the official Python image as a parent image
FROM python:3.12-slim

# Set the working directory
WORKDIR /app

# Install system dependencies first for better caching
# These are required for PDF processing and OCR.
RUN apt-get update && apt-get install -y \
    poppler-utils \
    libgl1-mesa-glx \
    libglib2.0-0

# Now, copy and install Python requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy the rest of the application code
COPY app/ ./app/
COPY config/ ./config/
COPY .env* ./

# Create runtime directories
RUN mkdir -p uploads previews samples debug company_configs

# Set environment variables for the application
ENV PYTHONPATH=/app

# Expose the port the app runs on
EXPOSE 8000

# The command to run the application in development mode with auto-reloading
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"] 