# OpenRouter API Configuration (REQUIRED)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Application Settings
DEBUG=True
ENVIRONMENT=development

# Production Settings (for hosting)
# Only need to set your domain - allowed hosts are auto-generated
PRODUCTION_DOMAIN=your-domain.com
MAX_FILE_SIZE_MB=10

# Optional Settings
MAX_UPLOAD_SIZE=10MB
ALLOWED_FILE_TYPES=pdf

# Future: Mailgun settings (for Phase 2)
# MAILGUN_API_KEY=your_mailgun_api_key_here
# MAILGUN_DOMAIN=your_mailgun_domain_here

# Future: Database settings (for Phase 2)
# DATABASE_URL=sqlite:///./payslips.db

# Mailgun
# Get from your Mailgun account settings
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain_here
MAILGUN_FROM_NAME="Monthly Paycheck"
MAILGUN_FROM_EMAIL=noreply@your_mailgun_domain_here

# Google OAuth Authentication
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# JWT Secret (generate a random secret for production)
JWT_SECRET=your_jwt_secret_key_here

# Rate Limiting (per user per day)
RATE_LIMIT_AI_CALLS_PER_DAY=50
RATE_LIMIT_EMAIL_SENDS_PER_DAY=20
RATE_LIMIT_PDF_UPLOADS_PER_DAY=10